@model LeyesTFG.Models.Articulo

@{
    ViewData["Title"] = "Borrar";
}

<h1 class="tituloTabla text-center">Borrar</h1>

<h3 class="text-center">¿Estás seguro que quieres eliminar este artículo de la base de datos?<br></h3>
<h3 class="text-center" style="color: red;">Todas las modificaciones asociadas también serán eliminadas</h3>
<h4 class="text-center">Artículo</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-12">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class = "col-sm-12 bg-white padding-left padding_boton_sm margin-top border border-dark">
            @Html.Raw(Model.Texto)
        </dd>
    </dl>
    
    <form asp-action="Delete" style="display:inline-block;" onclick="return confirm('Estas seguro de querer borrar esta modificación')">
        <input type="hidden" asp-for="ArticuloId" />
        <input type="submit" value="Delete" class="boton_tabla bg-danger" /> |
    </form>
    <a class="boton_tabla back_blue" asp-action="Index">Volver a la lista</a>
</div>
