@model LeyesTFG.Models.Articulo

@{
    ViewData["Title"] = "Editar";
}

<h1 class="tituloTabla text-center">Editar</h1>

<h4 class="text-center">Artículo</h4>
<hr />
<div class="row">
    <div class="col-md-4 a4_size">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArticuloId" />
            <div class="form-group">
                <label asp-for="Texto" class="control-label"></label>
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="boton_tabla" />
                 | <a class="boton_tabla padding_boton_sm bg-danger" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div> 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
