@model IEnumerable<LeyesTFG.Models.Ley>

@{
    ViewData["Title"] = "Ley";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]  
    </div>
}

<h1 class="tituloTabla text-center">Leyes</h1>

<p>
    <a class="boton_tabla" asp-action="Create">Nueva ley</a>
</p>

<form asp-action="Index" method="get">
    <div class="col-sm-6 form-actions padding-left bg-white border_2px">
        <p class="margin-top"> 
            Buscar por título: <input type="text" name="Busqueda" value="@ViewData["Filtro"]" />
            <input type="submit" value="Busqueda" class="boton_tabla back_blue" /> |
            <a class="boton_tabla" asp-action="Index">Lista completa</a>
        </p>
    </div>
</form>

<table bgcolor="#FFFFFF" class="table table-striped margin-top">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPublicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LeyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPublicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td class="text-center">
                <div class="container">
                    <a class="boton_tabla padding_boton_sm" asp-action="Edit" asp-route-id="@item.LeyId">Editar</a>
                </div>
                <div class="container margin-top">
                    <a class="boton_tabla back_blue padding_boton_sm" asp-action="Details" asp-route-id="@item.LeyId">Detalles</a>
                </div>
                <div class="container margin-top">
                    <a class="boton_tabla padding_boton_sm bg-danger" asp-action="Delete" asp-route-id="@item.LeyId">Borrar</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
