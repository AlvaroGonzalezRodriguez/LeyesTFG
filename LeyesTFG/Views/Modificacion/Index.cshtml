@model IEnumerable<LeyesTFG.Models.Modificacion>

@{
    ViewData["Title"] = "Modificación";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]  
    </div>
}

<h1 class="tituloTabla text-center">Modificaciones</h1>

<p>
    <a class="boton_tabla" asp-action="Create">Nueva modificación</a>
</p>

<form asp-action="Index" method="get">
    <div class="col-sm-6 form-actions padding-left bg-white border_2px">
        <p class="margin-top"> 
            Buscar por título: <input type="text" name="Busqueda" value="@ViewData["Filtro"]" />
            <input type="submit" value="Busqueda" class="boton_tabla back_blue" /> |
            <a class="boton_tabla" asp-action="Index">Lista completa</a>
        </p>
    </div>
</form>

<table bgcolor="#FFFFFF" class="table table-striped margin-top">
    <thead>
        <tr>
            <th>
                Artículo a modificar
            </th>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Texto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Articulo.Titulo)
                    </td>
                    <td class=@ViewBag.estado[i]>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.Raw(item.Texto)
                    </td>
                    <td class="text-center">
                        <div class="container">
                            <a class="boton_tabla padding_boton_sm" asp-action="Edit" asp-route-id="@item.ModificacionId">Editar</a>
                        </div>
                        <div class="container margin-top">
                            <a class="boton_tabla back_blue padding_boton_sm" asp-action="Details" asp-route-id="@item.ModificacionId">Detalles</a>
                        </div>
                        <div class="container margin-top">
                            <a class="boton_tabla padding_boton_sm" asp-action="Accept" asp-route-id="@item.ModificacionId">Evaluar</a>
                        </div>
                        <div class="container margin-top">
                            <a class="boton_tabla padding_boton_sm bg-danger" asp-action="Delete" asp-route-id="@item.ModificacionId">Borrar</a>
                        </div>
                    </td>
                </tr>
                i++;
            }
    }
    </tbody>
</table>
